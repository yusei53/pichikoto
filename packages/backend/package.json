{
  "name": "backend",
  "scripts": {
    "dev": "wrangler dev",
    "build": "tsc --noEmit",
    "deploy": "pnpm run build && wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "test": "vitest",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:setup": "tsx __tests__/setup/test-setup.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier --write src __tests__ scripts database",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:migrate:safe": "tsx scripts/migrate.ts",
    "db:studio": "drizzle-kit studio",
    "db:seed": "NODE_ENV=development tsx scripts/seed.ts",
    "typegen": "wrangler types"
  },
  "dependencies": {
    "@neondatabase/serverless": "^1.0.2",
    "@pichikoto/http-contracts": "workspace:*",
    "@types/pg": "^8.15.5",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.9.9",
    "jose": "^6.1.0",
    "neverthrow": "^8.2.0",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "reflect-metadata": "^0.2.2",
    "uuid": "^13.0.0",
    "ws": "^8.18.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/uuid": "^11.0.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.41.0",
    "@vitest/coverage-v8": "^3.2.4",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.4.1",
    "eslint-plugin-unused-imports": "^4.2.0",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4",
    "wrangler": "^4.42.0"
  }
}
